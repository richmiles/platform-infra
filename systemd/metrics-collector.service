[Unit]
Description=Spark Swarm metrics collector
After=network-online.target docker.service
Wants=network-online.target
Requires=docker.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/root/platform-infra
EnvironmentFile=/root/platform-infra/.env
Environment=METRICS_HOST_NAME=platform-droplet
ExecStart=/usr/bin/env python3 /root/platform-infra/scripts/metrics-collector.py

[Install]
WantedBy=multi-user.target
