# IEOMD - Time-locked secret delivery
ieomd.com {
	reverse_proxy ieomd:80
}

www.ieomd.com {
	redir https://ieomd.com{uri} permanent
}

# Umami - Analytics
analytics.sparkswarm.com {
	reverse_proxy umami:3000
}

# Matrix/Synapse - SparkSwarm ops chat
chat.sparkswarm.com {
	reverse_proxy synapse:8008
}

# Call of the Noodle - Noodle bar rating app
callofthenoodle.com {
	reverse_proxy noodle:8000
}

# Human Index
humanindex.io {
	reverse_proxy human-index:8000
}

www.humanindex.io {
	redir https://humanindex.io{uri} permanent
}

# Spark Swarm - Project ecosystem dashboard
swarm.sparkswarm.com {
	reverse_proxy spark-swarm:8000
}

